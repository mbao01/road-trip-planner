// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid(2))
  email          String          @unique
  firstName       String?
  lastName       String?
  avatarUrl      String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  ownedTrips     Trip[]
  collaborations Collaborator[]
  providers      Provider[]
}

model Provider {
  id            String       @id @default(cuid(2))
  type          ProviderType
  providerId    String       @unique
  providerData  Json?
  emailVerified  Boolean      @default(false)
  expiresAt     DateTime?
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@unique([type, providerId])
}

model Trip {
  id            String          @id @default(cuid(2))
  name          String
  startDate     DateTime
  endDate       DateTime
  status        TripStatus      @default(ACTIVE)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  owner         User            @relation(fields: [ownerId], references: [id])
  ownerId       String
  days          Day[]
  stops         Stop[]
  travel        Travel?
  settings      Settings?
  collaborators Collaborator[]
}

model Stop {
  id          String      @id @default(cuid(2))
  name        String
  customName  String?
  latitude    Float
  longitude   Float
  placeId     String
  order       Int
  day         Day         @relation(fields: [dayId], references: [id], onDelete: Cascade)
  dayId       String
  trip        Trip        @relation(fields: [tripId], references: [id], onDelete: Cascade)
  tripId      String
  itinerary   Itinerary[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@unique([tripId, dayId, order])
}

model Travel {
  id        String    @id @default(cuid(2))
  travels   Json      // { stopId: { originId, duration, distance, cost, mode } }
  originId  String?
  trip      Trip      @relation(fields: [tripId], references: [id], onDelete: Cascade)
  tripId    String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Day {
  id        String    @id @default(cuid(2))
  date      DateTime
  order     Int
  trip      Trip      @relation(fields: [tripId], references: [id], onDelete: Cascade)
  tripId    String
  stops     Stop[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([tripId, order])
}

model Itinerary {
  id        String             @id @default(cuid(2))
  name      String?
  notes     String?
  assets    ItineraryAsset[]
  stop      Stop               @relation(fields: [stopId], references: [id], onDelete: Cascade)
  stopId    String
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}

model ItineraryAsset {
  id          String             @id @default(cuid(2))
  url         String
  type        ItineraryAssetType @default(PHOTO)
  itinerary   Itinerary          @relation(fields: [itineraryId], references: [id], onDelete: Cascade)
  itineraryId String
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
}

model Settings {
  id               String        @id @default(cuid(2))
  mapStyle         MapStyle?     @default(DEFAULT)
  calculateCosts   Boolean?      @default(true)
  currency         Currency?     @default(GBP)
  fuelCostPerLitre Float?        @default(1.5)
  mpg              Float?        @default(30)
  avoidTolls       Boolean?      @default(false)
  avoidMotorways   Boolean?      @default(false)
  distanceUnit     DistanceUnit? @default(MI)
  trip             Trip          @relation(fields: [tripId], references: [id], onDelete: Cascade)
  tripId           String        @unique
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model Collaborator {
  id        String   @id @default(cuid(2))
  role      Role
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  trip      Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  tripId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, tripId])
}

enum Role {
  OWNER
  EDITOR
  VIEWER
  PUBLIC
}

enum TripStatus {
  ACTIVE
  ARCHIVED
  DELETED
  COMPLETED
  IN_PROGRESS
  NOT_STARTED
}

enum Currency {
  GBP
  EUR
  USD
}

enum DistanceUnit {
  MI
  KM
}

enum ItineraryAssetType {
  PDF
  PHOTO
  VIDEO
  AUDIO
}

enum ProviderType {
  CREDENTIAL
  GOOGLE
}

enum MapStyle {
  DEFAULT
  ROADMAP
  SATELLITE
  HYBRID
  TERRAIN
}